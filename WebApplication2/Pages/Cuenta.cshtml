@page
@model WebApplication2.Pages.CuentaModel
@{
    ViewData["Title"] = "Cuenta";
}


<link rel="stylesheet" href="css/StyleSheet.css" />

<h1 class="text-center">Bienvenidos</h1>



<header>
    <div class="container">

        <div class="col-sm-12 ">

            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <H3 class="text-center">Inicia Sesión</H3>
                    <div class="modal-content">
                        <div class="col-12 text-center">
                            <img src="img/logo.png" width=80px height=80px alt="">
                        </div>
                        <form method="post" class="col-12">
                            <div class="form-group text-left ">
                                <label asp-for="cuenta.Email">Email</label>
                                <input type="email" class="form-control" id="inputEmail" placeholder="Email" required>
                            </div>
                            <div class="form-group text-left">
                                <label asp-for="cuenta.Contraseña">Contraseña</label>
                                <input type="password" class="form-control" id="inputPassword" placeholder="*******" required>
                            </div>
                            <div class="form-group text-left">
                                <label class="form-check-label"><input type="checkbox"> Recordar Cuenta </label>
                            </div>
                            <div class="form-group text-right">
                                <a class="form-recovery" href="#"> Olvidaste tu contraseña?</a>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-warning"><strong>Inicio</strong></button>
                            </div>
                            <div class="form-group text-right">
                                <a class="form-recovery" href="/Registro"> crear una cuenta</a>
                            </div>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        </form>
                        <div class="col-12 img-user">
                            <img src="img/Cel.png" alt="" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </div>

    </div>
</header>



